{
  "name": "misc finder",
  "version": "1.0",
  "description": "Search in bookmarks, history, Scrapbox, Hatena-bookmarks",
  "permissions": [
    "storage",
    "history",
    "bookmarks",
    "https://scrapbox.io/",
    "https://b.hatena.ne.jp/",
    "https://api.zenn.dev/"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    }
  },
  "manifest_version": 2
}
